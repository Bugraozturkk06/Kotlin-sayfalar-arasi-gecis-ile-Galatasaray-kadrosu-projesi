<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/forvet"
        android:layout_width="128dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#F60101"
        android:onClick="forvet"
        android:text="FORVET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ortasaha" />

    <Button
        android:id="@+id/ortasaha"
        android:layout_width="128dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FF0000"
        android:onClick="ortasaha"
        android:text="ORTA SAHA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/defans" />

    <Button
        android:id="@+id/defans"
        android:layout_width="128dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FF0000"
        android:onClick="defans"
        android:text="DEFANS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kaleci" />

    <Button
        android:id="@+id/kaleci"
        android:layout_width="128dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FF0000"
        android:onClick="kaleci"
        android:text="KALECİ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView

        android:id="@+id/imageView2"
        android:layout_width="229dp"
        android:layout_height="230dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gs" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="244dp"
        android:layout_height="38dp"
        android:layout_marginTop="15dp"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:text="Hazırlayan: Buğra öztürk"
        android:textAlignment="center"
        android:textColor="#FF0707"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forvet" />

</androidx.constraintlayout.widget.ConstraintLayout>